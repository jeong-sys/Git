<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/baseBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="기준 위젯" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="1번"
        app:layout_constraintEnd_toStartOf="@+id/baseBtn"
        app:layout_constraintTop_toTopOf="@+id/baseBtn" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="2번"
        app:layout_constraintBaseline_toBaselineOf="@id/baseBtn"
        app:layout_constraintEnd_toStartOf="@+id/baseBtn" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="3번"
        app:layout_constraintBottom_toBottomOf="@id/baseBtn"
        app:layout_constraintEnd_toStartOf="@+id/baseBtn" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="4번"
        app:layout_constraintBottom_toTopOf="@+id/baseBtn"
        app:layout_constraintStart_toStartOf="@+id/baseBtn" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/baseBtn"
        app:layout_constraintEnd_toEndOf="@id/baseBtn"
        android:text="5번"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/baseBtn"
        app:layout_constraintBottom_toTopOf="@id/baseBtn"
        android:text="6번"/>

</androidx.constraintlayout.widget.ConstraintLayout>